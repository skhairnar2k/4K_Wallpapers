<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WallpaperActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/idIVWallpaper"
        android:scaleType="centerCrop"/>

    <ImageButton
        android:id="@+id/idQuizBtn"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_above="@id/idBtnSetWallpaper"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_backn"
        android:src="@drawable/quiz"
        android:textAllCaps="false" />

    <ImageButton
        android:id="@+id/idGameBtn"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_above="@id/idBtnSetWallpaper"
        android:layout_alignParentStart="true"
        android:layout_marginStart="54dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/button_backn"
        android:src="@drawable/game2"
        android:textAllCaps="false" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1373457972994236/7350686106">
    </com.google.android.gms.ads.AdView>

    <Button
        android:id="@+id/idBtnSetWallpaper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/adView"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:text="Set Wallpaper"
        android:background="@drawable/button_back"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:backgroundTint="#A6000000"/>


</RelativeLayout>